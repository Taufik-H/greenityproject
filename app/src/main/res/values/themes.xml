<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Greetiny" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Greetiny.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Greetiny.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Greetiny.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    //light mode screen
    <style name="Screen">
        <item name="android:background">#FFF</item>
    </style>
    //background jika light on
    <style name="Text">
        <item name="android:textColor">#000</item>
    </style>
    //button jika light mode on
    <style name="Button">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>