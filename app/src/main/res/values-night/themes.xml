<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Greetiny" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#151515</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Screen bacground if dark mode on -->
    <style name="SCREEN">
        <item name="android:background">#9E9C9C</item>
    </style>
    <!--Text background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>
    <!--Button background if dark mode on -->
    <style name="BUTTON">
        <item name="android:background">@color/bg</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>