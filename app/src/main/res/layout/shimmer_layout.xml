<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reCard"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="7dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="90dp"
            android:id="@+id/recImagec"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@color/inactive"
                android:id="@+id/recImage"/>
        </com.google.android.material.card.MaterialCardView>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/recImagec"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/name"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/inactive"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:fontFamily="@font/poppinsbold"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recType"
                android:layout_width="70dp"
                android:layout_height="25dp"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/inactive"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/poppinsreguler"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="30dp"

                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/inactive"
                android:layout_below="@id/name">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/inactive"

                    android:text="copy link"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>